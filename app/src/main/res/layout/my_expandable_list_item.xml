<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="120dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/cards_topbotmargin"
        android:layout_marginBottom="@dimen/cards_topbotmargin"
        android:layout_marginStart="@dimen/cards_sidesmargin"
        android:layout_marginEnd="@dimen/cards_sidesmargin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/exitemback"
            android:paddingTop="@dimen/cards_topbotpadding"
            android:paddingBottom="@dimen/cards_topbotpadding"
            android:paddingStart="@dimen/cards_sidespadding"
            android:paddingEnd="@dimen/cards_sidespadding">

            <ImageView
                android:layout_height="match_parent"
                android:layout_width="68dp"
                android:id="@+id/movieImage"
                android:scaleType="fitCenter"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"
                    android:id="@+id/text1"
                    android:textSize="23sp"
                    android:textColor="@color/colorAccent"
                    android:text="Text Text Text Text TextTextTextText Text Text"/>

                <TextView
                    android:text="Режисер: Квентин Тарантино"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:textSize="15sp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/colorAccent"
                    android:gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/text2" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>