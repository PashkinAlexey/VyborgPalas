<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/cards_sidesmargin"
            android:layout_marginLeft="@dimen/cards_sidesmargin"
            android:paddingTop="@dimen/cards_topbotpadding"
            android:paddingBottom="@dimen/cards_topbotpadding"
            android:paddingStart="@dimen/cards_sidespadding"
            android:paddingEnd="@dimen/cards_sidespadding"
            android:background="@drawable/listcard">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView1"
                android:minHeight="47dp"
                android:minWidth="35dp"
                android:paddingLeft="10dp"
                android:scaleType="fitCenter"
                android:paddingTop="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/text1"
                android:textColor="@color/colorAccent"
                android:layout_gravity="start"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="20sp" />
        </LinearLayout>
</LinearLayout>