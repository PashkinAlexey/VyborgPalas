<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/child_devider_left_margin"
        android:layout_marginRight="@dimen/child_devider_left_margin"
        app:srcCompat="@color/mainbackground"/>

    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/child_top_padding"
        android:paddingBottom="@dimen/child_bottom_padding"
        android:paddingStart="@dimen/child_left_padding"
        android:paddingEnd="@dimen/child_right_padding"
        android:paddingLeft="@dimen/child_left_padding"
        android:paddingRight="@dimen/child_right_padding">

        <ImageView android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="35dp"
            android:minHeight="47dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:scaleType="fitCenter" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/child_text_left_margin"
            android:layout_marginLeft="@dimen/child_text_left_margin"
            android:layout_gravity="center_vertical"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:id="@id/text1"
            android:text="New Text" />
    </LinearLayout>
</LinearLayout>